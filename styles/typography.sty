% styles/typography.sty
\ProvidesPackage{styles/typography}


% colors
\usepackage{xcolor}
\definecolor{red}{RGB}{200,20,20} % RGB values (Red=200, Green=0, Blue=0)


% fonts
\usepackage{fontspec}

\setmainfont{Tinos}[            % set main font
    Extension = .ttf,
    UprightFont = *-Regular,
    BoldFont = *-Bold,
    BoldItalicFont = *-BoldItalic,
    ItalicFont = *-Italic,
    Path = assets/fonts/,
]

\newfontfamily\robotofont[       % new font family: tinosfont
    Extension = .ttf,
    BoldFont = *,
    BoldFeatures = {RawFeature={+axis={wght=700}}},
    ItalicFont = *,
    ItalicFeatures = {FakeSlant=0.2},
    BoldItalicFont = *,
    BoldItalicFeatures = {RawFeature={+axis={wght=700}}, FakeSlant=0.2},
    Path = assets/fonts/
]{RobotoFlex}


% page layout
\usepackage{geometry}
\geometry {
    a4paper,
    top=10mm,           % text start (excl. header)
    bottom=10mm,        % text end  (excl. footer)
    left=10mm,
    right=10mm,
}


% head numbering
\setcounter{secnumdepth}{5}
\setcounter{tocdepth}{2}


% paragraph styling
\setlength{\parindent}{0pt}      % Remove paragraph indentation
\setlength{\parskip}{0.4em}        % Add space between paragraphs





% header / footer
\usepackage{fancyhdr}
\pagestyle{fancy}
\fancyhf{}              % clear default

\fancyfoot[LO]{}                % odd pages: footer left
\fancyfoot[CO]{}                % odd pages: footer center
\fancyfoot[RO]{\thepage}        % odd pages: footer right

\fancyfoot[LE]{\thepage}        % even pages: footer left
\fancyfoot[CE]{}                % even pages: footer center
\fancyfoot[RE]{}                % even pages: footer right side

\fancypagestyle{plain}{         % e.g. first chapter pages
    \fancyfoot[LO]{}                % odd pages: footer left
    \fancyfoot[CO]{}                % odd pages: footer center
    \fancyfoot[RO]{\thepage}        % odd pages: footer right

    \fancyfoot[LE]{\thepage}        % even pages: footer left
    \fancyfoot[CE]{}                % even pages: footer center
    \fancyfoot[RE]{}                % even pages: footer right side
}

\renewcommand{\headrulewidth}{0pt}      % remove header line
\renewcommand{\footrulewidth}{0pt}      % remove footer line


